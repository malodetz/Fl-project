{
	"name": "l-language-extension",
	"description": "L-language extension",
	"author": "-",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "vscode-samples",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:L-language"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "L-language",
				"aliases": [
					"L-language",
					"l-lang"
				],
				"extensions": [
					".lang"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "L-language",
				"scopeName": "source.lang",
				"path": "./syntaxes/l-lang.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "L-language",
				"path": "./snippets/snippets.code-snippets"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"eslint": "^7.26.0",
		"mocha": "^8.3.2",
		"typescript": "^4.4.3"
	}
}
